@model Easy.Modules.User.Models.UserEntity
@{
    ViewBag.Title = ZKEACMS.Version.CurrentVersion + " " + ZKEACMS.Version.Rank + " 深圳市纸壳软件科技有限公司";
    Layout = Layouts.NormalDefault;
    Style.Reqiured("Customer").AtHead();
    Script.Reqiured("validate").AtFoot();
    string link = "~/";
    if (Model.Email.IsNotNullAndWhiteSpace()&& Model.Email.IndexOf("@")>0)
    {
        link = "http://mail." + Model.Email.Substring(Model.Email.IndexOf("@")+1);
    }
}

@using (Html.BeginForm())
{

    <div class="login-panel sended">
        <div class="login-panel-heading">
            <p>
                <a href="http://www.zkea.net/" target="_blank">
                    <img class="logo" src="~/images/logo_min.png" alt="ZKEACMS" />
                </a>
            </p>
        </div>
        <div class="login-panel-body">
            <div class="info-bar">
                <p>
                    找回密码
                </p>
                <img src="~/css/Images/picker_account_msa.svg" />
            </div>
            <br />
            <h4>
                我们已经给您的邮箱发送了一封找回密码的邮件，请及时查收并修改密码。
            </h4>           
            <br />
            <div class="form-input">
                <a href="@Url.Content(link)" target="_blank" class="btn-login" >查收邮件</a>
            </div>
        </div>        
    </div>
}